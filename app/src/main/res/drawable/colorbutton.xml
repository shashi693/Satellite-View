<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="90"
                android:endColor="@color/colorPrimary"
                android:startColor="@color/colorAccent"/>
            <stroke
                android:width="3dp"
                android:color="@color/colorAccent" />
            <corners
                android:radius="5dp"/>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"/>
        </shape>

    </item>

    <item android:state_focused="true">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#F57F17"
                android:startColor="#FF6F00"/>
            <stroke
                android:width="3dp"
                android:color="@color/colorAccent"/>
            <corners
                android:radius="3dp"/>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"/>
        </shape>

    </item>

    <item android:state_hovered="true">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#F57F17"
                android:startColor="#FF6F00"/>
            <stroke
                android:width="3dp"
                android:color="@color/colorAccent"/>
            <corners
                android:radius="3dp"/>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"/>
        </shape>

    </item>

</selector>